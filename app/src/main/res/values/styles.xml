<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemBackground">@color/colorSecondary</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_state</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_state</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
